<div class="faq_partial">
  <div class="faq_header">
    <%= image_tag "pictos/faq.svg"%>
    <h2 class="fag_header_titre">Questions fr√©quentes</h2>
    <div class="faq_header_link">
      <%= link_to send("faqs_#{locale.to_s}_path") do %>
        <span><%= t("faq.faq_all") %></span>
        <%= image_tag "arrow-right.svg", width:16, height:16,alt:""%>
      <% end %>
    </div>
  </div>
  <div class="accordions_list" data-controller="accordeon">
    <% faqs.each do |faq| %>
      <div class="accordion">
        <div class="accordion_head" data-action="click->accordeon#toggleHorizontal" data-accorderon-target="horizontal">
            <h3 class="accordion_titre"><%= faq.question %></h3><span><img class="croix visible" src="/assets/pictos/croix-black-518ad9aff25229e2302361c74378bf621ba9d10c45bc004e771545eebaf03146.svg"><img class="moins" src="/assets/pictos/moins-green-23912787ad42293c123888db55ded5eca1264908589175c9f2e187ce5a505ea2.svg"></span>
        </div>
        <div class="accordion_content">
          <p><%= faq.answer %></p>
        </div>
      </div>
    <% end %>
  </div>

</div>
