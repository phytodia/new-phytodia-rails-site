<article id="blog_article">
  <div id="post_header">
    <div id="post_header_intro">
      <span class="line_green"></span>
      <div>
        <h1><%= @article.titre %></h1>
        <div class="post_tags">
        </div>
        <p><%= @article.intro %></p>
        <div class="post_header_author">
        </div>
        <div class="post_header_date_time">
          <div>
            <p>Publié le <%= @article.created_at %></p>
            <span>-</span>
            <p>Mis à jour le: <%= @article.updated_at %></p>
          </div>
          <p>Temps de lecture : <%= image_tag "pictos/chrono.svg" %> xx min</p>
        </div>
      </div>
    </div>
  </div>
  <div id="blog_article" class="inside">
    <section class="article_cover">
      <div>
      <%= image_tag @article.cover %>
      </div>
      <p>Legende cover</p>
    </section>
    <div class="blog_article_content">
      <section class="blog_article_main_content">
        <%= @article.content %>
      </section>
      <nav class="article_table_matieres">
        <ul>
          <li>1</li>
          <li>2</li>
          <li>3</li>
          <li>4</li>
          <li>5</li>
        </ul>
      </nav>
    </div>
  </div>
</article>
