<ul id="filters_list_blog">
    <%= link_to "Tous", blog_path(),class:"tag_filter" %>
    <% @categories.each do |cat_filter| %>
      <% if cat_filter.titre.downcase == category %>
        <%= button_to cat_filter.titre,blog_filter_path(cat:cat_filter.titre.downcase),class:"tag_filter active" %>
      <% else %>
        <%= button_to cat_filter.titre,blog_filter_path(cat:cat_filter.titre.downcase),class:"tag_filter" %>
      <% end %>
    <% end %>
</ul>
